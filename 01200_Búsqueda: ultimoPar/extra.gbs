function reverso(lista) {
	recorrido := []

	foreach elem in lista {
		recorrido := [elem] ++ recorrido
	}

	return (recorrido)
}

function primerPar(lista) {
	recorrido := lista

	while (not esPar(head(recorrido)) {
		recorrido := tail(recorrido)
	}

	return (head(recorrido))
}

function pares(lista) {
	resultado := []
	foreach elem in lista {
		if (esPar(elem)) { resultado := resultado ++ [elem] }
	}
	
	return (resultado)
}

function esPar(numero) {
	return (numero mod 2 == 0)
}